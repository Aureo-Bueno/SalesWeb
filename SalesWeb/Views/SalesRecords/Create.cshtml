@model SalesWeb.Models.ViewModels.SalesRecordViewModel
@{
    ViewData["Title"] = "Create - Sales Record";
}

<h2>
    @ViewData["Title"]
</h2>

<h4>Seller</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            @*<div asp-validation-summary="All" class="text-danger"></div>*@
            <div class="form-group">
                <label asp-for="SalesRecord.Date" class="control-label"></label>
                <input asp-for="SalesRecord.Date" class="form-control" />
                <span asp-validation-for="SalesRecord.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalesRecord.Amount" class="control-label"></label>
                <input asp-for="SalesRecord.Amount" class="form-control" />
                <span asp-validation-for="SalesRecord.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalesRecord.Status" class="control-label"></label>
                <select asp-for="SalesRecord.Status" class="form-control"></select>
                <span asp-validation-for="SalesRecord.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalesRecord.Seller.Id" class="control-label"></label>
                <select asp-for="SalesRecord.Seller.Id" asp-items="@(new SelectList(Model.Sellers, "Id", "Name"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
